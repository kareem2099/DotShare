{
  "name": "dotshare-cli",
  "displayName": "DotShare",
  "description": "CLI tool for posting to social media platforms - Telegram, LinkedIn, Reddit",
  "version": "1.0.0",
  "publisher": "freerave",
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "assets/icons/icon.png",
  "main": "./out/extension.js",
  "bin": {
    "dotshare": "./bin/dotshare-cli.js"
  },
  "files": [
    "bin/",
    "out/",
    "src/cli/",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dotshare-container",
          "title": "DotShare",
          "icon": "assets/icons/icon.png"
        }
      ]
    },
    "views": {
      "dotshare-container": [
        {
          "id": "dotshareView",
          "name": "DotShare",
          "type": "webview",
          "icon": "assets/icons/icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "dotshare.generatePost",
        "title": "Generate Social Media Post with Gemini"
      },
      {
        "command": "dotshare.shareToLinkedIn",
        "title": "Share to LinkedIn"
      },
      {
        "command": "dotshare.shareToTelegram",
        "title": "Share to Telegram"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "compile": "tsc -p ./",
    "build:webview": "esbuild media/main.ts --bundle --outfile=media/app.js --format=iife --global-name=DotShare --platform=browser --minify",
    "scheduler": "node bin/dotshare-scheduler.js",
    "cli": "node bin/dotshare-cli.js",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src media bin --ext ts,js",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "esbuild": "^0.25.11",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.0",
    "axios": "^1.6.0",
    "commander": "^11.1.0",
    "form-data": "^4.0.0",
    "keytar": "^7.9.0",
    "open": "^8.4.2",
    "openai": "^6.0.1"
  },
  "keywords": [
    "share",
    "social",
    "linkedin",
    "telegram",
    "twitter",
    "x",
    "facebook",
    "discord",
    "reddit",
    "bluesky",
    "ai",
    "gemini",
    "openai",
    "xai"
  ],
  "author": "FreeRave",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kareem2099/DotShare.git"
  },
  "homepage": "https://github.com/kareem2099/DotShare"
}
